<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:background="@drawable/style_bottom_bfbfbf_1dp_solid_transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="33"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/form_list_name_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="17dp"
            android:textColor="#252525"
            android:textSize="20sp"
            android:fontFamily="@font/nanumsquare_r"/>
        <TextView
            android:id="@+id/form_list_category_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="17dp"
            android:textColor="#6f6f6f"
            android:textSize="12sp"
            android:fontFamily="@font/nanumsquare_r"/>
        <TextView
            android:id="@+id/form_list_address_textView"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="8dp"
            android:textColor="#6f6f6f"
            android:textSize="12sp"
            android:fontFamily="@font/nanumsquare_r"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form_list_call_btn"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/tel_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>