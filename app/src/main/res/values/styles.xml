<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#d9d9d9</item> <!--배경-->
        <item name="android:textColorPrimary">@android:color/white</item><!--탭바 선택된 텍스트-->
        <item name="android:textColorSecondary">@android:color/black</item><!--탭바 텍스트-->
        <item name="colorAccent">#b5b5b5</item><!--하단 바 색-->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name = "IntroTheme" parent="Theme.AppCompat.NoActionBar">
        <item name = "android:windowBackground">@drawable/intro</item>
    </style>
</resources>
